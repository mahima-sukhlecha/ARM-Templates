{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "resourceGroupLocation": {
            "type": "string",
            "metadata": {
                "description": "Resource group Location"
            }
        },
        "publicIPAddress": {
            "type": "string",
            "metadata": {
                "description": "description"
            }
        },
        "virtualNetworkName": {
            "type": "string",
            "metadata": {
                "description": "description"
            }
        },
        "subnetName": {
            "type": "string",
            "metadata": {
                "description": "description"
            }
        },
        "networkInterfaceName": {
            "type": "string",
            "metadata": {
                "description": "description"
            }
        },
        "virtualMachineName": {
            "type": "string",
            "metadata": {
                "description": "description"
            }
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "Admin Username"
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Admin Password"
            }
        },
        "domainNameLabel": {
            "type": "string",
            "metadata": {
                "description": "description"
            }
        }

    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "name": "[parameters('publicIPAddress')]",
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2019-11-01",
            "location": "[parameters('resourceGroupLocation')]",
            "tags": {
                "displayName": "[parameters('publicIPAddress')]"
            },
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "dnsSettings": {
                    "domainNameLabel": "[parameters('domainNameLabel')]"
                }
            }
        },

        {
            "name": "[parameters('networkInterfaceName')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2019-11-01",
            "location": "[parameters('resourceGroupLocation')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', parameters('publicIPAddress'))]"            ],
            "tags": {
                "displayName": "[parameters('networkInterfaceName')]"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipConfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('publicIPAddress'))]"
                            },
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName'), parameters('subnetName'))]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "name": "[parameters('virtualMachineName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2019-07-01",
            "location": "[parameters('resourceGroupLocation')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', parameters('networkInterfaceName'))]"
            ],
            "tags": {
                "displayName": "[parameters('virtualMachineName')]"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_A2_v2"
                },
                "osProfile": {
                    "computerName": "[parameters('virtualMachineName')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2012-R2-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "windowsVM1OSDisk",
                        "caching": "ReadWrite",
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('networkInterfaceName'))]"
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": false
                    }

                }
            }
        }
    ],
    "outputs": {}
}